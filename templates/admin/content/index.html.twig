{% extends 'adminbase.html.twig' %}

{% block title %}Content List{% endblock %}

{% block body %}

    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowUrl,windowName,windowFeatures) { window.open(windowUrl,windowName,windowFeatures);}
    </SCRIPT>
    <div class="dashboard-wrapper">
        <div class="container-fluid dashboard-content">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <h5 class="card-header">Content List</h5>
                        <div class="card-body">

                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">User</th>
                                    {#<th>Keywords</th>
                                    <th>Description</th>#}
                                    <th scope="col">Image</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">I.Gallery</th>
                                    <th scope="col">Status</th>
                                    {#<th>Created_at</th>
                                    <th>Updated_at</th>#}
                                    <th scope="col">actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for content in contents %}
                                    <tr>
                                        <td>{{ content.id }}</td>
                                        <td>{{ content.catname }}</td>
                                        <td>{{ content.title }}</td>
                                        <td><a href="{{ path('admin_user_show',{'id':content.userid}) }}">{{ content.name }} {{ content.surname }}</a> </td>
                                        {#<td>{{ content.keywords }}</td>
                                        <td>{{ content.description }}</td>#}
                                        <td><img src="{{ asset('uploads/images/'~ content.image) }}" height="40"></td>
                                        <td>{{ content.type }}</td>

                                        <td><a href="javascript:openWin('{{ path('admin_image_new',{'id':content.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                                <img src="{{ asset('assets/admin/img') }}/gallery.png" height="40">
                                            </a> </td>

                                        <td>{{ content.status }}</td>
                                        {#<td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ content.updatedAt ? content.updatedAt|date('Y-m-d H:i:s') : '' }}</td>#}

                                        <td>
                                            <a href="{{ path('admin_content_show', {'id': content.id}) }}" class="badge badge-pill badge-info">Show</a>
                                        </td>

                                        <td>
                                            <a href="{{ path('admin_content_edit', {'id': content.id}) }}" class="badge badge-pill badge-secondary">Edit</a>
                                        </td>

                                        <td>
                                            {{ include('admin/content/_delete_form.html.twig') }}
                                        </td>

                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="10">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>


                            <a href="{{ path('admin_content_new') }}" class="btn btn-success active">Create new</a>

                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->

            </div>

            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                            Copyright Â© 2018 Concept. All rights reserved. Dashboard by <a href="https://colorlib.com/wp/">Colorlib</a>.
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                            <div class="text-md-right footer-links d-none d-sm-block">
                                <a href="javascript: void(0);">About</a>
                                <a href="javascript: void(0);">Support</a>
                                <a href="javascript: void(0);">Contact Us</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end footer -->
            <!-- ============================================================== -->
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end main wrapper -->
    <!-- ============================================================== -->
    <!-- Optional JavaScript -->
    <script src={{ asset('assets') }}/admin/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src={{ asset('assets') }}/admin/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <script src={{ asset('assets') }}/admin/assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <script src={{ asset('assets') }}/admin/assets/libs/js/main-js.js"></script>
{% endblock %}
