{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile {% endblock %}

{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowUrl,windowName,windowFeatures) { window.open(windowUrl,windowName,windowFeatures);}
    </SCRIPT>

    <div class="page_container">
        <div class="breadcrumb">
            <div class="wrap">
                <div class="container">
                    <a href="/user">User</a><span>/</span>User Content List
                </div>
            </div>
        </div>



        <div class="wrap">
            <div class="container">
                <section>
                    <div class="row">
                        <div class="span8">
                            <div class="post">
                                <h2 class="title"><span><a href="blog_post.html">User Contents</a></span></h2>



                                <div class="card-body">


                                    <table class="table table-hover">
                                        <thead>
                                        <tr>
                                            <th scope="col">Id</th>
                                            <th scope="col">Title</th>
                                            {#<th>Keywords</th>
                                            <th>Description</th>#}
                                            <th scope="col">Image</th>
                                            <th scope="col">Type</th>
                                            <th scope="col">I.Gallery</th>
                                            <th scope="col">Status</th>
                                            {#<th>Created_at</th>
                                            <th>Updated_at</th>#}
                                            <th scope="col">actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for content in contents %}
                                            <tr>
                                                <td>{{ content.id }}</td>
                                                <td>{{ content.title }}</td>
                                                {#<td>{{ content.keywords }}</td>
                                                <td>{{ content.description }}</td>#}
                                                <td><img src="{{ asset('uploads/images/'~ content.image) }}" style="height: 40px"></td>
                                                <td>{{ content.type }}</td>

                                                <td><a href="javascript:openWin('{{ path('user_image_new',{'id':content.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                                        <img src="{{ asset('assets/admin/img') }}/gallery.png" style="height: 40px">
                                                    </a> </td>

                                                <td>{{ content.status }}</td>
                                                {#<td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                                <td>{{ content.updatedAt ? content.updatedAt|date('Y-m-d H:i:s') : '' }}</td>#}

                                                 <td>
                                                     <a href="{{ path('user_content_show', {'id': content.id}) }}" class="btn btn-info">Show</a>
                                                 </td>

                                                 <td>
                                                     <a href="{{ path('user_content_edit', {'id': content.id}) }}" class="btn btn-primary">Edit</a>
                                                 </td>

                                                 <td>
                                                     {{ include('content/_delete_form.html.twig') }}
                                                 </td>

                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="10">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>


                                    <a href="{{ path('user_content_new') }}" class="btn btn-inverse">Create New Content</a>



                                </div>
                            </div>
                        </div>

                        {{ include('user/usermenu.html.twig') }}
                    </div>
                </section>
            </div>
        </div>
    </div>
{% endblock %}